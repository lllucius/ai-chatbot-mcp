# AI Chatbot Terminal Client Configuration
# Copy this file to .env or set environment variables with CHATBOT_ prefix

# API Configuration
CHATBOT_API_URL=http://localhost:8000
CHATBOT_USERNAME=admin
# CHATBOT_PASSWORD=your_password  # Optional, will prompt if not set

# Authentication
# CHATBOT_TOKEN_FILE=/path/to/token/file  # Optional, uses default if not set

# Default Chat Settings
CHATBOT_DEFAULT_USE_RAG=true
CHATBOT_DEFAULT_USE_TOOLS=true
# CHATBOT_DEFAULT_PROMPT_NAME=helpful_assistant  # Optional
# CHATBOT_DEFAULT_PROFILE_NAME=balanced  # Optional

# UI Preferences
CHATBOT_SPINNER_ENABLED=true
CHATBOT_AUTO_TITLE=true
CHATBOT_MAX_HISTORY_DISPLAY=50

# Advanced Features
CHATBOT_ENABLE_STREAMING=false
CHATBOT_SAVE_CONVERSATIONS=true
# CHATBOT_CONVERSATION_BACKUP_DIR=/path/to/backups  # Optional

# Debug and Development
CHATBOT_DEBUG_MODE=false
CHATBOT_REQUEST_TIMEOUT=120